<div class="row">
    <main class="col-md-12">
        <form method="POST" action="/students/add">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" type="text" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" type="text" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Status and Course</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>TA:</label>
                            <input class="form-check-input" name="TA" type="checkbox" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Status:</label>
                            <input class="form-control" name="status" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Course:</label>
                            {{#if courses}}
                                <select class="form-control" name="course">
                                    <option value="">Select Course</option>
                                    {{#each courses}}
                                        <option value="{{this.courseId}}">{{this.courseCode}}</option>
                                    {{/each}}
                                </select>
                            {{else}}
                                <div>No Courses Available</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </fieldset>
            <button class="btn btn-primary" type="submit">Add Student</button>
        </form>
    </main>
</div>
