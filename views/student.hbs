<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student:
            {{viewData.student.studentNum}}</h2>
        <hr />

        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />

            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input id="firstName" class="form-control" name="firstName" type="text"
                                value="{{viewData.student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input id="lastName" class="form-control" name="lastName" type="text"
                                value="{{viewData.student.lastName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr />

            <fieldset>
                <legend>Contact Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input id="email" class="form-control" name="email" type="email"
                                value="{{viewData.student.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input id="addressStreet" class="form-control" name="addressStreet" type="text"
                                value="{{viewData.student.addressStreet}}" />
                        </div>
                        <div class="form-group">
                            <label for="addressCity">Address (City):</label>
                            <input id="addressCity" class="form-control" name="addressCity" type="text"
                                value="{{viewData.student.addressCity}}" />
                        </div>
                        <div class="form-group">
                            <label for="addressProvince">Address (Province):</label>
                            <input id="addressProvince" class="form-control" name="addressProvince" type="text"
                                value="{{viewData.student.addressProvince}}" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr />

            <fieldset>
                <legend>Additional Information</legend>
                <div class="form-group">
                    <label for="TA">TA:</label>
                    <input type="checkbox" id="TA" name="TA" {{#if viewData.student.TA}}checked{{/if}} />
                </div>
                <div class="form-group">
                    <label>Status:</label>
                    <div>
                        <label for="statusFullTime">
                            <input id="statusFullTime" type="radio" name="status" value="Full Time" {{#if (equal viewData.student.status "Full Time")}}checked{{/if}} /> Full Time
                        </label>
                        <label for="statusPartTime">
                            <input id="statusPartTime" type="radio" name="status" value="Part Time" {{#if (equal viewData.student.status "Part Time")}}checked{{/if}} /> Part Time
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="course">Enrolled Course:</label>
                    {{#if viewData.courses.length}}
                    <select class="form-select" name="course" id="course">
                        <option value="">Select Course</option>
                        {{#each viewData.courses}}
                        <option value="{{courseId}}" {{#if (equal viewData.student.courseCode courseId)}}selected{{/if}}>{{courseCode}}</option>
                        {{/each}}
                    </select>
                    {{else}}
                    <div>No Courses Available</div>
                    {{/if}}
                </div>
            </fieldset>

            <hr />

            <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
        </form>
    </main>
</div>
